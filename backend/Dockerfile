# Use Node.js 18
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --only=production

# Copy source code
COPY . .

# Create uploads directory
RUN mkdir -p uploads/photos uploads/thumbnails

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]